{
  "version": 4,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 12,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "Default",
      "displayName": "Default (Release)",
      "description": "Release build with system default generator.",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/install"
      }
    },
    {
      "name": "Debug",
      "displayName": "Debug",
      "description": "Build with debug info and no optimization.",
      "inherits": "Default",
      "binaryDir": "${sourceDir}/build/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "Default",
      "configurePreset": "Default",
      "description": "Build the release configuration",
      "jobs": 16
    },
    {
      "name": "Debug",
      "configurePreset": "Debug",
      "description": "Build the debug configuration",
      "jobs": 16
    }
  ],
  "testPresets": [
    {
      "name": "Default",
      "configurePreset": "Default",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "Debug",
      "configurePreset": "Debug",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}